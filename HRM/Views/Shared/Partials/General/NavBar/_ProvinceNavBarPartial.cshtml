<script type="text/javascript">
    var _provinceManagementUsersUrl = '@Url.Action("ProvinceManagementUsersIndex", "Management", new { area = "Province" })';
    var _provinceManagementArchivedUsersUrl = '@Url.Action("ProvinceArchiveUsersIndex", "Archive", new { area = "Province" })';
    var _provinceManagementRolesUrl = '@Url.Action("ProvinceRolesIndex", "Access", new { area = "Province" })';
