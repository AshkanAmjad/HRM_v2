            $.get(_provinceManagementArchivedUsersUrl).done(function (result) {
                $("#main").html(result);
            });
        });
        //------------------------------------------------------------------------
        $("#provinceManagementRoles").off("click");
        $("#provinceManagementRoles").on("click", function (e) {
            e.preventDefault();
            $.get(_provinceManagementRolesUrl).done(function (result) {
                $("#main").html(result);
            });
        });
        //------------------------------------------------------------------------
        $("#provinceManagementUserRoles").off("click");
        $("#provinceManagementUserRoles").on("click", function (e) {
            e.preventDefault();
            $.get(_provinceManagementUserRolesUrl).done(function (result) {
                $("#main").html(result);
