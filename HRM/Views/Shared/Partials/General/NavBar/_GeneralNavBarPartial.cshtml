<script type="text/javascript">
    var _homeUrl = '@Url.Action("Index", "Home")';
    var _myAccountUrl = '@Url.Action("FillProfileGrid", "Management")';
    var _myDocumentsUrl = '@Url.Action("ManagementMyDocumentsIndex", "Document")';
</script>
<script type="text/javascript">
    $(function () {
        $("#home").off("click");
        $("#home").on("click", function (e) {
            e.preventDefault();
            $.get(_homeUrl).done(function (result) {
                $("#main").html(result);
            });
        });
        //------------------------------------------------------------------------
        $("#myAccount").off("click");
        $("#myAccount").on("click", function (e) {
            e.preventDefault();
            $.get(_myAccountUrl).done(function (result) {
                $("#main").html(result);
            });
        });
        //------------------------------------------------------------------------
        $("#myDocuments").off("click");
        $("#myDocuments").on("click", function (e) {
            e.preventDefault();
            $.get(_myDocumentsUrl).done(function (result) {
                $("#main").html(result);
            });
        });
    })
</script>
